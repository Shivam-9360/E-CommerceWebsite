@model ECommerceWebsite.Models.ProductListModel

@section cssFile
{
    @Styles.Render("~/Shop/css")
}


<div id="shopPageBanner">
    <img src="../images/shopWithUs_bg.png" alt="" width="100%" id="laptopShopBanner">
</div>

<div class="filter-bar">
    <span id="filterClick" class="headings-for-page">Filter/Sort <i class="fa fa-filter"></i></span>
    <div id="sortFilterDrops">
        <select name="filter" id="categoryDropDown" onchange="searchByFilters()">
            <option value="0">Filter : Category</option>
            <option value="1">Backpack</option>
            <option value="2">Duffel</option>
            <option value="3">Purse</option>
            <option value="4">Suitcase</option>
        </select>
        <select name="sort" id="priceDropDown" onchange="searchByFilters()">
            <option value="0">Sort : Price Range</option>
            <option value="1">Low to High</option>
            <option value="2">High to Low</option>
        </select>
    </div>
</div>

<div class="main-box" id="shopMainBox">
    @Html.Partial("_ProductList", Model)
</div>

@section scriptFile
{
    <script>
        var selectedCategoryDropDown = @Model.CategorySort
        var selectedPriceDropDown = @Model.PriceSort
    </script>
    @Scripts.Render("~/Shop/js")
}